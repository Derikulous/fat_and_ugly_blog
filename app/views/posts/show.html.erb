<p id="notice"><%= notice %></p>
<% @posts.each do |post| %>
  <p>
    <b>Title:</b>
    <%= @post.title %>
  </p>

  <p>
    <b>Body:</b>
    <%= @post.body %>
  </p>
<% end %>

  <%= link_to 'Show Comments', show_comment_path(@post.comments) %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
